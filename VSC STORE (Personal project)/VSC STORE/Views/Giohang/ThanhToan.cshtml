@model IEnumerable<CartItem>
@{
    ViewBag.Title = "ThanhToan";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

@{
    var user = ViewBag.User;
}
@using (Html.BeginForm("DatMua", "Giohang", FormMethod.Post))
{
    <section class="main-container clearfix">
        <div class="container my-3">
            <div class="row">
                <div class="category-title position-relative py-2">
                    <h2 class="text-center text-uppercase ">Thanh Toán</h2>
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="width:70px;" class="text-center">Mã SP</th>
                            <th style="width:100px;" class="text-center">Hình</th>
                            <th class="text-center">Tên sản Phẩm</th>
                            <th class="text-center">Giá</th>
                            <th style="width:100px;" class="text-center">Số lượng </th>
                            <th class="text-center">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ decimal tongtien = 0;}
                        @foreach (var cart in Model)
                        {
                            <tr>
                                <td class="text-center">@cart.ProductId</td>
                                <td> <img src="~/Public/images/Products/@cart.Img" class="img-fluid card-img-top" alt="@cart.Name"></td>
                                <td class="text-center">@cart.Name</td>
                                <td class="text-center"> @string.Format("{0:0,0}", cart.Price) VNĐ</td>
                                <td class="text-center">@cart.Qty</td>
                                <td class="text-center">@string.Format("{0:0,0}", cart.Amount) VNĐ</td>
                            </tr>
                            tongtien += cart.Amount;
                        }
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <h class="text-center"><strong>Thông tin khách hàng</strong></h>
                        <div class="row py-2">
                            <div class="col-md-3">
                                <label>Họ tên: </label>
                            </div>
                            <div class="col-md-9">
                                <input name="FullName" value="@user.FullName" readonly class="form-control" />
                            </div>
                        </div>
                        <div class="row py-2">
                            <div class="col-md-3">
                                <label>Số điện thoại: </label>
                            </div>
                            <div class="col-md-9">
                                <input name="Phone" value="@user.Phone" readonly class="form-control" />
                            </div>
                        </div>
                        <div class="row py-2">
                            <div class="col-md-3">
                                <label>Email: </label>
                            </div>
                            <div class="col-md-9">
                                <input name="Email" value="@user.Email" readonly class="form-control" />
                            </div>
                        </div>

                        <div class="row py-2">
                            <div class="col-md-3">
                                <label>Địa chỉ: </label>
                            </div>
                            <div class="col-md-9">
                                <input name="Address" value="@user.Address" readonly class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-4">
                    <h5 class="text-center"><strong>Thông tin người nhận hàng</strong></h5>
                    <div class="row py-2">
                        <div class="col-md-3">
                            <label>Họ tên: </label>
                        </div>
                        <div class="col-md-9">
                            <input name="ReceiverName" class="form-control" />
                        </div>
                    </div>
                    <div class="row py-2">
                        <div class="col-md-3">
                            <label>Số điện thoại: </label>
                        </div>
                        <div class="col-md-9">
                            <input name="ReceiverPhone" class="form-control" />
                        </div>
                    </div>
                    <div class="row py-2">
                        <div class="col-md-3">
                            <label>Email: </label>
                        </div>
                        <div class="col-md-9">
                            <input name="ReceiverEmail" class="form-control" />
                        </div>
                    </div>
                    <div class="row py-2">
                        <div class="col-md-3">
                            <label>Chọn Thành phố: </label>
                        </div>
                        <div class="col-md-9">
                            <select class="from-control" name="ReceiverThanhpho">
                                <option value="0">---Hãy chọn thành phố---</option>
                                <option value="0">Thành Phố Hồ Chí Minh</option>
                                <option value="0">Thành phố Hà Nội</option>
                                <option value="0">Thành Phố Đà Nẵng</option>
                            </select>
                        </div>
                    </div>
                    <div class="row py-2">
                        <div class="col-md-3">
                            <label>Chọn Quận: </label>
                        </div>
                        <div class="col-md-9">
                            <select>
                                <option value="0">---Hãy Chọn Quận---</option>
                                <option value="0">Quận 1</option>
                                <option value="0">Quận 2</option>
                                <option value="0">Quận 3</option>
                                <option value="0">Quận 4</option>
                                <option value="0">Quận 5</option>
                                <option value="0">Quận 6</option>
                                <option value="0">Quận 7</option>
                                <option value="0">Quận 8</option>
                                <option value="0">Quận 9</option>
                                <option value="0">Quận 10</option>
                                <option value="0">Quận Thủ Đức</option>
                                <option value="0">Quận Phú Nhuận</option>
                                <option value="0">Quận Bình Thạnh</option>
                                <option value="0">Quận Gò Vấp</option>
                            </select>
                        </div>
                    </div>
                    <div class="row py-2">
                        <div class="col-md-3">
                            <label>Chọn Phường: </label>
                        </div>
                        <div class="col-md-9">
                            <select class="from-control">
                                <option value="0">---Hãy chọn phường---</option>
                                <option value="0">Phường Phước Long A</option>
                                <option value="0">Phường Phước Long B</option>
                                <option value="0">Phường Tăng Nhơn Phú A</option>
                                <option value="0">Phường Tăng Nhơn Phú B</option>
                                <option value="0">Phường Tân Phú</option>
                                <option value="0">Phường Phước Bình</option>
                                <option value="0">Phường Phú Hữu</option>
                                <option value="0">Phường Long Trường</option>
                            </select>
                        </div>
                    </div>

                    <div class="row py-2">
                        <div class="col-md-3">
                            <label>Ghi chú: </label>
                        </div>
                        <div class="col-md-9">
                            <textarea name="Note" rows="2" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
                <div class="text-left">
                    <h5>Chọn phương thức thanh toán</h5>
                    <div class="row">
                        <ul>
                            <div class="row">
                                <div class="col-md-10">
                                    <input type="checkbox" />
                                </div>
                                <div class="col-md-3">
                                    <h6>Thanh toán tiền mặt khi nhận hàng</h6>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10">
                                    <input type="checkbox" />
                                </div>
                                <div class="col-md-3">
                                    <h6>Thanh toán qua ngân hàng</h6>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10">
                                    <input type="checkbox" />
                                </div>
                                <div class="col-md-3">
                                    <h6>Thanh toán qua Momo</h6>
                                </div>
                            </div>
                        </ul>
                    </div>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-2">
                    <h5>Hóa đơn của bạn</h5>
                    <p>Tổng tiền: @string.Format("{0:0,0}", tongtien) VNĐ</p>
                    <p>Giảm: ... VNĐ</p>
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-primary">Đặt mua</button>
                    </div>
                </div>
            </div>

            </div>

    </section>
}