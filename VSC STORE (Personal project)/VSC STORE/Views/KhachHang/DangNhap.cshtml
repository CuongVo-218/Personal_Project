
@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

@using (Html.BeginForm("DangNhap", "KhachHang", FormMethod.Post))
{
    <section class="clearfix">
        <div class="container my-3">
            <div class="text-center ">
                <h3 class="text-danger">Đăng nhập<img src="~/Public/images/logostore.png" style="width:150px" /></h3>
            </div>
            <div class="form-group-lg ">
                <div class="row">
                    <div class="col-4">

                    </div>
                    <div class="col-4">
                        <div class="form-group py-2 text-primary">
                            <label>Tên đăng nhập:</label>
                            <input type="text" name="username" value="" class="form-control" />
                        </div>
                        <div class="form-group py-2 text-primary">
                            <label>Mật khẩu:</label>
                            <input type="password" name="password" value="" class="form-control" />
                        </div>
                        <div class="form-group py-2 ">
                            <button type="submit" class="btn btn-info text-light">Đăng nhập</button>
                            <button><a class="btn dropdown-item text-info" href="~/dang-ky"><i class="fas fa-plus-circle"></i> Đăng ký</a></button>
                        </div>
                        <div class="form-group py-2 text-danger">
                            @Html.Raw(ViewBag.Error)
                        </div>
                    </div>
                </div>
                <div class="col-4">

                </div>
            </div>
        </div>
    </section>
}
